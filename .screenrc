term "screen-255color"
#term xterm-256color
encoding UTF-8
altscreen on
attrcolor b ".I"
defbce on
vbell off
startup_message off
defscrollback 5000
bufferfile "$HOME/.screen/exchange"
hardcopydir "$HOME/.screen/hardcopy"
sorendition dY
hardstatus alwayslastline
hardstatus string '%{= dW}%-Lw%{= dY}%50> %n*%f %t%{= dW}%+Lw%< %{= dW}%-=%D %m/%d/%y %C %A %1`%{-}'
